
#include <stdio.h>
void binarysearch(int arr[], int n, int key)
{   int l=0,r=n-1,mid;
    int found=0;
    while(l<=r)
    {
        mid=(l+r)/2;
        if(key==arr[mid])
        {
        found=1;
        printf("\nElement %d found at index : %d\n ", key,mid);
        break;
        }
        else if(key<arr[mid])
        r=mid-1;
        else
        l=mid+1;
    }
    if(found==0)
     printf("\nElement %d not found in the array.\n", key);
}
void linearSearch(int arr[], int n, int key)
{
    int found=0;
    for (int i = 0; i < n; i++)
    {
        if (arr[i] == key)
        {   
            printf("\nElement %d found at index : %d\n ", key,i);
           found=1;
            break;
            
        }
    }
    if(found==0)
            printf("\nElement %d not found in the array.\n", key);

}


int main() 
{
   int key,n;
    printf("Enter the size of the array: ");
    scanf("%d",&n);
    int arr[n];
    printf("Enter array Elements: ");
    for(int i=0;i<n;i++)
     scanf("%d",&arr[i]);
    printf("Enter the element to be searched : ");
    scanf("%d",&key);
    printf("\n_______ LINEAR SEARCH ______");
    linearSearch(arr, n, key);
    printf("\n\n\n\n\n_______ BINARY SEARCH ______");
    binarysearch(arr, n, key);
    return 0;
}
OUTPUT:


[?2004l
